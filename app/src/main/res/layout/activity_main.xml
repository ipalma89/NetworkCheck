<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.rappi.ivan.networkcheck.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_retrofit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get With Retrofit" />

                <TextView
                    android:id="@+id/text_retrofit"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="Retrofit:" />

                <Button
                    android:id="@+id/button_volley"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="Get With Volley" />

                <TextView
                    android:id="@+id/text_volley"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="Volley:" />

                <Button
                    android:id="@+id/button_volleyOkHttp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:text="Get With VolleyOkHttp" />

                <TextView
                    android:id="@+id/text_volleyOkHttp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:text="VolleyOkHttp:" />
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#AAFFFFFF"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:visibility="gone"
            tools:visiblity="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </FrameLayout>
</layout>
